model User {
  id                String    @id @default(uuid())
  email             String?   @unique
  password          String?   
  name              String?   
  role              String?   @default("fats") // fats, wbs, both
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  refreshToken      RefreshToken[]
  roles             Role[]     @relation("UserRoles")
}

