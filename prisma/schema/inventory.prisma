model Inventory {
  id                String    @id @default(uuid())
  assetLocation     String?
  mainCatCode       String?
  mainCatDesc       String?
  mainDesc          String?
  subCatCode        String?
  subCatDesc        String?
  assetCategory     String?
  image             String?
  quantity          Int?       @default(1)
  serial            String?
  employeeId        String?
  extNumber         String?
  faNumber          String?
  type              String?

  transactionId     String?     // Human readable transaction ID (e.g., "TXN-20231001-001")
  transactionDate   DateTime?   @default(now())
  transactionName   String?     // File Name
  createdBy         String?
  status            String?     @default("Completed")
  verifiedAssets    VerifiedAsset[]

  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([assetLocation, mainCatCode, serial])
}